<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="host"
        android:title="Host" android:inputType="textUri"/>
    <EditTextPreference
        android:key="port"
        android:title="Port" android:inputType="number"/>
    <EditTextPreference
        android:key="cs_host"
        android:title="CS Host" android:inputType="textUri"/>
    <EditTextPreference
        android:key="username"
        android:title="CS Username" android:inputType="text"/>
    <EditTextPreference
        android:key="password"
        android:title="CS Password" android:inputType="textPassword"/>
    <CheckBoxPreference
        android:key="ldap" android:title="Enable LDAP Service"></CheckBoxPreference>
    <CheckBoxPreference
        android:key="swipe" android:title="Enable Swipe Listener"></CheckBoxPreference>
</PreferenceScreen>