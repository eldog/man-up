<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="ldap_lookup_enabled"
        android:title="Perform LDAP lookup" />
    <CheckBoxPreference
        android:key="listen_for_swipeup"
        android:title="Listen for SwipeUp" />
    <CheckBoxPreference
        android:key="should_upload_signatures"
        android:title="Upload signatures " />
    <EditTextPreference
        android:key="cs_host"
        android:title="CS Host"
        android:inputType="textUri" />
    <EditTextPreference
        android:key="cs_username"
        android:title="CS Username"
        android:inputType="text" />
    <EditTextPreference
        android:key="cs_password"
        android:title="CS Password"
        android:inputType="textPassword" />
    <EditTextPreference
        android:key="swipeup_host"
        android:title="SwipeUp Host"
        android:inputType="textUri" />
    <EditTextPreference
        android:key="swipeup_port"
        android:title="SwipeUp Port"
        android:inputType="number" />
    <CheckBoxPreference
        android:key="admin_mode"
        android:title="Admin Mode" />
</PreferenceScreen>
