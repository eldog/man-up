<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="host"
        android:title="Host"
        android:inputType="textUri" />
    <EditTextPreference
        android:key="port"
        android:title="Port"
        android:inputType="number" />
    <EditTextPreference
        android:key="cs_host"
        android:title="CS Host"
        android:inputType="textUri" />
    <EditTextPreference
        android:key="username"
        android:title="CS Username"
        android:inputType="text" />
    <EditTextPreference
        android:key="password"
        android:title="CS Password"
        android:inputType="textPassword" />
    <CheckBoxPreference
        android:key="ldap_lookup_enabled"
        android:title="Perform LDAP lookup" />
    <CheckBoxPreference
        android:key="listen_for_swipeup"
        android:title="Listen for SwipeUp" />
</PreferenceScreen>
